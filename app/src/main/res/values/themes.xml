        <!-- Background color -->
        <item name="android:windowBackground">#F8F8F8</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Customize the color of switches -->
        <item name="colorSwitchThumbNormal">@color/red</item>
